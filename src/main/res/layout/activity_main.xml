<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:stretchColumns="1">

    <TableRow>
        <TextView
            android:layout_column="1"
            android:text="Open..."
            android:padding="10px" />
        <TextView
            android:text="Ctrl-O"
            android:gravity="right"
            android:padding="10px" />
    </TableRow>

    <TableRow>
        <TextView
            android:layout_column="1"
            android:text="Save..."
            android:padding="10px" />
        <TextView
            android:text="Ctrl-S"
            android:gravity="right"
            android:padding="10px" />
    </TableRow>

    <TableRow>
        <TextView
            android:layout_column="1"
            android:text="Save As..."
            android:padding="10px" />
        <TextView
            android:text="Ctrl-Shift-S"
            android:gravity="right"
            android:padding="15px" />
    </TableRow>

    <View
        android:layout_height="5px"
        android:background="#85c1e9" />

    <TableRow>
        <TextView
            android:text="X"
            android:padding="10px" />
        <TextView
            android:text="Import..."
            android:padding="10px" />
    </TableRow>

    <TableRow>
        <TextView
            android:text="X"
            android:padding="10px" />
        <TextView
            android:text="Export..."
            android:padding="5px" />
        <TextView
            android:text="Ctrl-E"
            android:gravity="right"
            android:padding="10px" />
    </TableRow>

    <View
        android:layout_height="5px"
        android:background="#85c1e9" />

    <TableRow>
        <TextView
            android:layout_column="1"
            android:text="Quit"
            android:padding="10px" />
    </TableRow>
</TableLayout>